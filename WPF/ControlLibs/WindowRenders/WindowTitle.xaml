                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 2.19524,3.13808L 3.13806,2.19527L 11.1381,10.1953L 10.1953,11.1381L 2.19524,3.13808 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 3.13807,11.1381L 2.19526,10.1953L 10.1953,2.19526L 11.1381,3.13807L 3.13807,11.1381 Z " />
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        <DrawingBrush x:Key="Maximize" Stretch="Uniform">
            <DrawingBrush.Drawing>
                <DrawingGroup ClipGeometry="F1 M 0,0L 13.3333,0L 13.3333,13.3333L 0,13.3333L 0,0">
                    <GeometryDrawing Brush="Transparent" Geometry="F1 M -26.6667,0L 26.6667,0L 26.6667,13.3333L -26.6667,13.3333L -26.6667,0 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 0,-2.86102e-006L -1.33333,-2.86102e-006L -1.33333,9.33333L 0,9.33333L 0,-2.86102e-006 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 1.33333,10.6667L 12,10.6667L 12,12L 1.33333,12L 1.33333,10.6667 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 12,1.33333L 10.6667,1.33333L 10.6667,12L 12,12L 12,1.33333 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 2.66666,2.66667L 1.33329,2.66667L 1.33329,12L 2.66666,12L 2.66666,2.66667 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 1.33333,1.33333L 12,1.33333L 12,4L 1.33333,4L 1.33333,1.33333 Z " />
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        <DrawingBrush x:Key="Minimize" Stretch="Uniform">
            <DrawingBrush.Drawing>
                <DrawingGroup ClipGeometry="F1 M 0,0L 13.3333,0L 13.3333,13.3333L 0,13.3333L 0,0">
                    <GeometryDrawing Brush="Transparent" Geometry="F1 M 0,9.53674e-007L 53.3333,9.53674e-007L 53.3333,13.3333L 0,13.3333L 0,9.53674e-007 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 2.66667,10.6667L 10.6667,10.6667L 10.6667,12L 2.66667,12L 2.66667,10.6667 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 13.3333,12L 24,12L 24,13.3333L 13.3333,13.3333L 13.3333,12 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 14.6667,4L 13.3333,4L 13.3333,13.3333L 14.6667,13.3333L 14.6667,4 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 13.3333,2.66667L 24,2.66667L 24,5.33333L 13.3333,5.33333L 13.3333,2.66667 Z " />
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        <DrawingBrush x:Key="Restore" Stretch="Uniform">
            <DrawingBrush.Drawing>
                <DrawingGroup ClipGeometry="F1 M 0,0L 13.3334,0L 13.3334,13.3333L 0,13.3333L 0,0">
                    <GeometryDrawing Brush="Transparent" Geometry="F1 M -13.3333,9.53674e-007L 40,9.53674e-007L 40,13.3333L -13.3333,13.3333L -13.3333,9.53674e-007 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 4,0L 13.3333,0L 13.3333,1.33333L 4,1.33333L 4,0 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M -4.76837e-006,12L 10.6667,12L 10.6667,13.3333L -4.76837e-006,13.3333L -4.76837e-006,12 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 13.3333,-1.90735e-006L 12,-1.90735e-006L 12,9.33333L 13.3333,9.33333L 13.3333,-1.90735e-006 Z " />
                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 10.6667,2.66667L 9.33333,2.66667L 9.33333,13.3333L 10.6667,13.3333L 10.6667,2.66667 Z " />

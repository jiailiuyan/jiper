<UserControl
    x:Class="Ksy.Client.CommonHelper.WPF.ControlLibs.WindowRenders.WindowTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ksy.Client.CommonHelper.WPF.ControlLibs.WindowRenders"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="localcontrol"
    Height="30"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DrawingBrush x:Key="Close" Stretch="Uniform">
            <DrawingBrush.Drawing>
                <DrawingGroup ClipGeometry="F1 M 0,0L 13.3333,0L 13.3333,13.3333L 0,13.3333L 0,0">

                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    <Grid>
        <Border />
        <Grid
            Margin="5,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Left"
                Foreground="White"
                Text="{Binding Title, ElementName=localcontrol}" />
            <Grid HorizontalAlignment="Right" />
        </Grid>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <local:WindowControllerButton
                x:Name="min_btn"
                HorverBrush="#33333333"
                Icon="{StaticResource Minimize}"
                IconMargin="6,6,6,6"
                Visibility="Collapsed" />

            <local:WindowControllerButton
                x:Name="normal_btn"
                HorverBrush="#33333333"
                Icon="{StaticResource Restore}"
                IconMargin="6,6,6,6" />
            <local:WindowControllerButton
                x:Name="max_btn"
                HorverBrush="#33333333"
                Icon="{StaticResource Maximize}"
                IconMargin="6,6,6,6" />
            <local:WindowControllerButton
                x:Name="close_btn"
                HorverBrush="Red"
                Icon="{StaticResource Close}" />
        </StackPanel>
    </Grid>
</UserControl>

<UserControl
    x:Class="Ji.WPFHelper.ControlLibs.ViewTextControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Diagnostics="clr-namespace:Ji.CommonHelper.System"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="rootcontrol"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Center">
        <TextBlock
            x:Name="textblock"
            Foreground="{Binding Foreground, ElementName=rootcontrol}"
            TextAlignment="{Binding TAlignment, ElementName=rootcontrol}" />
    </Grid>
</UserControl>